#!/bin/sh
set -e
export PS4='
>>>>>>> '
trap "echo TEST FAILED" EXIT
set -x
export seed=0.3423
scons -s -c; rm -f *.o *.a
scons -j 4 clstmocrtrain clstmfiltertrain clstmfilter clstmocr test-lstm
./test-lstm
./test-filter.sh
./test-ocr.sh
scons -s -c; rm -f *.o *.a
scons -j 4 double=1 debug=1 test-cderiv test-deriv test-ctc
./test-cderiv
./test-deriv
./test-ctc
scons -s -c pytest
scons pytest
set +x
trap "echo ALL TESTS PASS" EXIT
