#!/bin/sh
# set -e
export PS4='
>>>>>>> '
trap "echo TEST FAILED" EXIT
set -x
export seed=0.2733
scons -s -c; rm -f *.o *.a
scons -j 4 debug=0 clstmocrtrain clstmfiltertrain clstmfilter clstmocr test-lstm
./test-lstm
./test-filter.sh
./test-ocr.sh
scons -s -c; rm -f *.o *.a
scons -j 4 double=1 debug=1 test-cderiv test-deriv test-ctc
./test-cderiv
./test-deriv
./test-ctc
scons -s -c pyswig
scons pyswig
python test-lstm.py
set +x
scons -s -c all pyswig
trap "echo ALL TESTS PASS" EXIT
